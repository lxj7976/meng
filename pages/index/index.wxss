/**index.wxss**/

.container{
  position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 80rpx;
}
.map{
  width: 100%;
  height: 100%;
}
.btns{
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  right: 0;
  line-height: 80rpx;
  background: #03bbd5;
}
.btns view{
  flex: 1;
  text-align: center;
}
.btns view:nth-child(1){
  background: #ff9700;
}
.play{
  width: 30px;
  height: 30px;
}
.pin{
  position: absolute;
  z-index: 1;
  top: 50%;
  left: 50%;
  transform:translate(-50%, -100%);
}
.center{
  position: absolute;
  z-index: 1;
  bottom:40rpx;
  left: 20rpx;
}