<!--pages/publish/publish.wxml-->
<view class="row">
  <label>我的地址：</label>
  <view bindtap='choose'>{{address}}</view>
</view>
<view class="row">
  <label>类型：</label>
   <radio-group class="radio-group" bindchange="radioChange">
    <radi value='buy'/>求购
    <radio value="sell" checked='true'/>转让
  </radio-group>
</view>
<view class="row">
  <label>说明:</label>
  <view>
    <input placeholder='请填写您的具体需求' bindinput='inputdesc'/>
  </view>
</view>
<view class="row">
  <label>联系方式</label>
  <view>
    <input placeholder='请填写您的联系方式' bindinput='inputcontact' />
  </view>
</view>
<button class='pub' bindtap='pub'>发布信息</button>